<Page loaded="loaded">
    <!-- Menu Bar -->
    <Page.actionBar>
        <ActionBar class="menubar" title="Project Planner">
            <!-- Main Menu Items -->
            <ActionItem tap="onSearch" text="Search" android.systemIcon="ic_menu_search" android.position="actionBar" />
            <ActionItem tap="onNewEntry" text="New Entry" android.systemIcon="ic_menu_add" android.position="actionBar" />
            <ActionItem tap="onSettings" text="Settings" android.position="popup" />
            <ActionItem tap="onRefresh" text="Refresh" android.position="popup" />
            <ActionItem tap="onClearAll" text="Clear All" android.position="popup" />
            <ActionItem tap="onLoad" text="Load" android.position="popup" />
            <ActionItem tap="onSave" text="Save" android.position="popup" />
        </ActionBar>
    </Page.actionBar>

    <!-- Main Content -->
    <ScrollView>
        <ListView id="listView" items="{{ entryList }}" itemTap="onViewEntry">
            <ListView.itemTemplate>
                <StackLayout class="entryItem" visibility="{{ isVisible ? 'visible' : 'collapse' }}">
                    <Label text="{{ title }}" />
                </StackLayout>
            </ListView.itemTemplate>
        </ListView>
    </ScrollView>
</Page>
