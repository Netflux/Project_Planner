<Page loaded="loaded">
    <!-- Menu Bar -->
    <Page.actionBar>
        <ActionBar class="menubar" title="Add/Edit Entry">
            <!-- Main Menu Items -->
            <NavigationButton tap="onBack" text="Go Back" android.systemIcon="ic_menu_back" />
            <ActionItem tap="onSave" text="Save" android.systemIcon="ic_menu_save" android.position="actionBar" />
        </ActionBar>
    </Page.actionBar>

    <!-- Main Content -->
    <ScrollView>
        <StackLayout>
            <Label text="Title" />
            <TextView text="{{ title }}" />
                <Label text="Description" />
                <TextView text="{{ description }}" />
        </StackLayout>
    </ScrollView>
</Page>
